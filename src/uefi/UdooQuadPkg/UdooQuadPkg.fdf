################################################################################
#
# FD.UDOOQUAD
#
################################################################################
[FD.UDOOQUAD]
    BaseAddress   = 0x10000000|gArmTokenSpaceGuid.PcdFdBaseAddress
    Size          = 0x00180000|gArmTokenSpaceGuid.PcdFdSize
    ErasePolarity = 1
    BlockSize     = 0x1
    NumBlocks     = 0x00180000

0x00000000|0x00000400
FILE = UdooQuadPkg/Binary/imghdr.bin

0x00000400|0x00009C00
FILE = UdooQuadPkg/Binary/SPL

0x0000A000|0x00007400
FILE = UdooQuadPkg/Binary/zeroes.bin

0x00011400|0x00050C00
FILE = UdooQuadPkg/Binary/u-boot.img

0x00062000|0x00009000
gArmTokenSpaceGuid.PcdSecureFvBaseAddress|gArmTokenSpaceGuid.PcdSecureFvSize
FV = FV_SEC

0x0006B000|0x00115000
gArmTokenSpaceGuid.PcdFvBaseAddress|gArmTokenSpaceGuid.PcdFvSize
FV = FV_UNCOMPRESSED

################################################################################
#
# FV_SEC
#
################################################################################
[FV.FV_SEC]
    FvAlignment        = 8
    ERASE_POLARITY     = 1
    MEMORY_MAPPED      = TRUE
    STICKY_WRITE       = TRUE
    LOCK_CAP           = TRUE
    LOCK_STATUS        = TRUE
    WRITE_DISABLED_CAP = TRUE
    WRITE_ENABLED_CAP  = TRUE
    WRITE_STATUS       = TRUE
    WRITE_LOCK_CAP     = TRUE
    WRITE_LOCK_STATUS  = TRUE
    READ_DISABLED_CAP  = TRUE
    READ_ENABLED_CAP   = TRUE
    READ_STATUS        = TRUE
    READ_LOCK_CAP      = TRUE
    READ_LOCK_STATUS   = TRUE

    INF UdooQuadPkg/Sec/Sec.inf


################################################################################
#
# FV_COMPRESSED
#
################################################################################
[FV.FV_COMPRESSED]
    BlockSize          = 0x1
    NumBlocks          = 0         # This FV gets compressed so make it just big enough
    FvAlignment        = 8         # FV alignment and FV attributes setting.
    ERASE_POLARITY     = 1
    MEMORY_MAPPED      = TRUE
    STICKY_WRITE       = TRUE
    LOCK_CAP           = TRUE
    LOCK_STATUS        = TRUE
    WRITE_DISABLED_CAP = TRUE
    WRITE_ENABLED_CAP  = TRUE
    WRITE_STATUS       = TRUE
    WRITE_LOCK_CAP     = TRUE
    WRITE_LOCK_STATUS  = TRUE
    READ_DISABLED_CAP  = TRUE
    READ_ENABLED_CAP   = TRUE
    READ_STATUS        = TRUE
    READ_LOCK_CAP      = TRUE
    READ_LOCK_STATUS   = TRUE
    FvNameGuid         = 8fa66cd0-f773-4f26-8f9f-5e54d0804c68

    #
    # DXE
    #
    INF MdeModulePkg/Core/Dxe/DxeMain.inf
    INF MdeModulePkg/Universal/DevicePathDxe/DevicePathDxe.inf
    INF ArmPkg/Drivers/CpuDxe/CpuDxe.inf
    INF ArmPkg/Drivers/ArmGic/ArmGicDxe.inf
    INF MdeModulePkg/Universal/SecurityStubDxe/SecurityStubDxe.inf
    INF MdeModulePkg/Universal/WatchdogTimerDxe/WatchdogTimer.inf
    INF EmbeddedPkg/MetronomeDxe/MetronomeDxe.inf
    INF NxpPkg/Drivers/IMX6/TimerDxe/TimerDxe.inf
    INF MdeModulePkg/Universal/SerialDxe/SerialDxe.inf
    INF MdeModulePkg/Universal/HiiDatabaseDxe/HiiDatabaseDxe.inf
    INF UdooQuadPkg/Drivers/PciEmulation/PciEmulation.inf
    INF MdeModulePkg/Bus/Pci/NonDiscoverablePciDeviceDxe/NonDiscoverablePciDeviceDxe.inf

    INF MdeModulePkg/Universal/SmbiosDxe/SmbiosDxe.inf
    INF UdooQuadPkg/Drivers/PlatformSmbiosDxe/PlatformSmbiosDxe.inf

    INF MdeModulePkg/Universal/Acpi/AcpiTableDxe/AcpiTableDxe.inf
    INF MdeModulePkg/Universal/Acpi/AcpiPlatformDxe/AcpiPlatformDxe.inf   
    INF RuleOverride=ACPITABLE UdooQuadPkg/AcpiTables/AcpiTables.inf

    #
    # RUNTIME_DRIVER
    #
    INF MdeModulePkg/Core/RuntimeDxe/RuntimeDxe.inf
    INF MdeModulePkg/Universal/CapsuleRuntimeDxe/CapsuleRuntimeDxe.inf
    INF MdeModulePkg/Universal/Variable/EmuRuntimeDxe/EmuVariableRuntimeDxe.inf
