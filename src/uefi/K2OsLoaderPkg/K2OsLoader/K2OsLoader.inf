    $(K2_DLXSUPPLIB)\dlx_getinfo.c
    $(K2_DLXSUPPLIB)\idlx.h

    #
    # VMAP32 sources
    #
    $(K2_VMAPLIB)\vmap32.c
    $(K2_VMAPLIB)\vmdump.c

