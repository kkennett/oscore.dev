    trans_a32.c
    cpu_a32.c
    arch_a32.c 

[Sources.IA32]
    trans_x32.c
    cpu_x32.c
    arch_x32.c

[BuildOptions]
    RELEASE_*_*_CC_FLAGS = -DK2_FINAL=1
    DEBUG_*_*_CC_FLAGS = -DK2_DEBUG=1
    RELEASE_*_*_ASM_FLAGS = -DK2_FINAL=1
    DEBUG_*_*_ASM_FLAGS = -DK2_DEBUG=1

[Packages]
    K2OsLoaderPkg/K2OsLoaderPkg.dec
    MdePkg/MdePkg.dec

[Packages.ARM]
