    $(K2_TREELIB)\treeremove.c

    #
    # DLX sources
    #
    $(K2_DLXSUPPLIB)\dlx_acquire.c
    $(K2_DLXSUPPLIB)\dlx_addref.c
    $(K2_DLXSUPPLIB)\dlx_addrname.c
    $(K2_DLXSUPPLIB)\dlx_callback.c
