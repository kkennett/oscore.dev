    BaseMemoryLib
    MemoryAllocationLib
    PrintLib
    UefiBootServicesTableLib
    UefiRuntimeServicesTableLib
    UefiApplicationEntryPoint
    UefiLib
    DebugLib

[LibraryClasses.ARM]
    ArmLib
    HobLib 

